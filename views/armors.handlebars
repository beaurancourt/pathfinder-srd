<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<link rel="stylesheet" href="/css/creatures.css" />

<table id="creatures-table" class="table table-hover table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Level</th>
    </tr>
  </thead>
  <tbody>
    {{#each armors}}
      <tr onclick='window.location="/armors/{{name}}";'>
        <td>{{name}}</td>
        <td>{{type}}</td>
        <td>{{#if level}}{{level}}{{else}}0{{/if}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<script src="/js/creatures.js"></script>
