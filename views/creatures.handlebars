<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Level</th>
    </tr>
  </thead>
  <tbody>
    {{#each creatures}}
      <tr onclick="window.location='/creatures/{{name}}';">
        <td>{{name}}</td>
        <td>{{category}}</td>
        <td>{{level}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
