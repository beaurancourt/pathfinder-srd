<div class="card w-33">
  <div class="card-body">
    <h5 class="card-title">{{name}} <span class="badge badge-secondary float-right">{{level}}</span></h5>
    {{#if prerequisites}}
      <h6 class="card-subtitle mb-2 text-muted"><strong>Prerequisites:</strong> {{prerequisites}}</h6>
    {{/if}}
    <h6 class="card-subtitle mb-2 text-muted">
      {{#each traits}}
        <span class="badge badge-secondary">{{this}}</span>
      {{/each}}
    </h6>
    <p class="card-text">{{{description}}}</p>
    {{#each information}}
      <p class="card-text"><strong>{{label}}:</strong> {{description}}</p>
    {{/each}}
    {{#if source}}
      <footer class="blockquote-footer">{{source}}</footer>
    {{/if}}
  </div>
</div>
