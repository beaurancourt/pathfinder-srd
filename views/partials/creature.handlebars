<ul class="list-group">
  <li class="list-group-item d-flex justify-content-around align-items-center list-group-item-primary">
    <h4>{{name}} - Creature {{level}}</h4>
  </li>
  <li class="list-group-item d-flex justify-content-around align-items-center list-group-item">
    {{#each tags}}
      <span class="badge badge-secondary">{{this}}</span>
    {{/each}}
  </li>
  <li class="list-group-item">
    {{#each stats}}
      <span class="font-weight-bold">{{@key}}: </span> {{this}}
    {{/each}}
  </li>
  {{#each information}}
    <li class="list-group-item">
      <span class="font-weight-bold">{{label}}: </span>{{description}}
    </li>
  {{/each}}
  <li class="list-group-item list-group-item-secondary">
    <span class="font-weight-bold">HP: </span>{{HP}}
    <span class="font-weight-bold">AC: </span>{{AC}}
    {{#each saves}}
      <span class="font-weight-bold">{{@key}}: </span>{{this}}
    {{/each}}
  </li>
  {{#each defenses}}
    <li class="list-group-item list-group-item-secondary">
      {{#if actionCost}}
        <img src="/img/{{actionCost}}.png" style="height: 20px;">
      {{/if}}
      <span class="font-weight-bold">{{label}}: </span>{{description}}
    </li>
  {{/each}}
  {{#each combat}}
    <li class="list-group-item list-group-item-warning">
      {{#if actionCost}}
        <img src="/img/{{actionCost}}.png" style="height: 20px;">
      {{/if}}
      <span class="font-weight-bold">{{label}}: </span>
      {{description}}
    </li>
  {{/each}}
  {{#if creatureDescription}}
    <li class="list-group-item">
      <span class="font-weight-bold">Description: </span>
      {{creatureDescription}}
    </li>
  {{/if}}
  {{#if familyDescription}}
    <li class="list-group-item">
      <span class="font-weight-bold">Family Description: </span>
      {{familyDescription}}
    </li>
  {{/if}}
</ul>
