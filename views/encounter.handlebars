<link rel="stylesheet" href="/css/creatures.css" />

<nav class="navbar navbar-expand-lg navbar-light bg-light">

<ul class="navbar-nav mr-auto">

    
    <li class="nav-item ">
        <div class="input-group mb-3" >
            <div class="input-group-prepend">
                <label class="input-group-text" for="encounterDifficulty">Encounter Difficulty</label>
            </div>
            <select class="custom-select" id="encounterDifficulty">
                <option value="Trivial">Trivial</option>
                <option value="Low-Threat">Low-Threat</option>
                <option value="High-Threat">High-Threat</option>
                <option value="Severe-Threat">Severe-Threat</option>
                <option value="Extreme-Threat">Extreme-Threat</option>
            </select>
        </div>
    </li>

    <li class = "nav-item">
        <div class="input-group mb-3" >
            <div class="input-group-prepend">
                <label class="input-group-text" for="partyLevel">Party's Level</label>
            </div>

            <input type="text" class="form-control" id="partyLevel" value = "0" >
        
        </div>
    </li>

    <li class = "nav-item">
        <div class="input-group mb-3" >
            <div class="input-group-prepend">
                <label class="input-group-text" for="moreLessPlayers">Additional '(+)'/ Missing '(-)'' Players</label>
            </div>

                <input type="text" class="form-control" id="moreLessPlayers" value = "0" >

        </div>

    </li>

    <li class = "nav-item" >
        <button type="button" id = "generateCreatures" onclick="window.location='/encounter/generate/'">
            Generate Encounter
        </button>
    </li>
</ul>
</nav>
<div class="container"  style="margin: 20px;">
    <div class="row justify-content-center">
        
        
        {{#each encounter}}
        <div class="col align-self-center">
            <div class="card" style="margin: 10px auto; width: 18rem" type="button" data-toggle="modal" data-target= '#{{id}}'>
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Level {{level}} - {{rarity}}</h6>
                <p class="card-text">Category: {{category}}</p>
            </div>
            </div>
            {{!-- <!-- Button trigger modal -->
            <button type="button" data-toggle="modal" data-target={{name}}>
            Launch demo modal
            </button> --}}
        </div>
        <!-- Modal -->
        <div class="modal fade" id={{id}} tabindex="-1" role="dialog" aria-labelledby="longScrollModalTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="longScrollModalTitle">Creature Stats</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-around align-items-center list-group-item-primary">
                                <h1>{{name}}</h1>
                            </li>
                            <li class="list-group-item d-flex justify-content-around align-items-center">
                                <h2>{{hp}} hp</h2>
                                <h2>{{rarity}} {{level}}</h2>
                            </li>
                            <li class="list-group-item d-flex justify-content-around align-items-center list-group-item">
                                {{#each tags}}
                                <span class="badge badge-secondary">{{this}}</span>
                                {{/each}}
                            </li>
                            <li class="list-group-item">
                                {{#each defenses}}
                                <span class="font-weight-bold">{{@key}}: </span>
                                {{this}}
                                {{/each}}
                            </li>
                            <li class="list-group-item">
                                {{#each stats}}
                                <span class="font-weight-bold">{{@key}}: </span>
                                {{this}}
                                {{/each}}
                            </li>
                            <li class="list-group-item">
                                <span class="font-weight-bold">Perception: </span>
                                {{perception}};
                                <span class="font-weight-bold">Skills: </span>
                                {{skills}};
                            </li>
                            {{#each traits}}
                                <li class="list-group-item list-group-item-info">
                                <span class="font-weight-bold">{{label}}: </span>
                                {{description}}
                                </li>
                            {{/each}}
                            <li class="list-group-item">
                                <span class="font-weight-bold">Speed: </span>
                                {{speed}}
                            </li>
                            {{#each actions}}
                                <li class="list-group-item list-group-item-warning">
                                {{#if cost}}
                                    <span class="badge badge-secondary">{{cost}}</span>
                                {{/if}}
                                <span class="font-weight-bold">{{label}}: </span>
                                {{description}}
                                </li>
                            {{/each}}
                            </ul>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        {{/each}}

    </div>
</div>